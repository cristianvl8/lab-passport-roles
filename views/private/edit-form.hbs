<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Editar usuario {{username}}</h1>

            <form action="/editar/{{_id}}" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control" id="username" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <input name="role" type="text" class="form-control" id="role" value="{{role}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar</button>
            </form>
        </div>
    </div>


    <a class="btn btn-dark non-radius" href="/famosos/listado">Volver</a>
</div>